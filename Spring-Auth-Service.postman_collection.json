				{
					"name": "Refrescar Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    ",
									"    // Actualizar access_token (puede ser de testuser o admin)",
									"    if (pm.environment.get(\"refresh_token\") === pm.environment.get(\"refresh_token_admin\")) {",
									"        // Si ambos refresh tokens son iguales, actualizar ambos",
									"        pm.environment.set(\"access_token\", jsonData.access_token);",
									"        pm.environment.set(\"access_token_admin\", jsonData.access_token);",
									"    } else if (pm.environment.get(\"refresh_token\") && pm.environment.get(\"refresh_token\") === pm.request.body.urlencoded.find(p => p.key === 'refresh_token')?.value) {",
									"        pm.environment.set(\"access_token\", jsonData.access_token);",
									"    } else if (pm.environment.get(\"refresh_token_admin\") && pm.environment.get(\"refresh_token_admin\") === pm.request.body.urlencoded.find(p => p.key === 'refresh_token')?.value) {",
									"        pm.environment.set(\"access_token_admin\", jsonData.access_token);",
									"    }",
									"    ",
									"    // Actualizar refresh_token si viene uno nuevo",
									"    if (jsonData.refresh_token) {",
									"        // Determinar cuál refresh token se usó",
									"        var usedRefreshToken = pm.request.body.urlencoded.find(p => p.key === 'refresh_token')?.value;",
									"        if (usedRefreshToken === pm.environment.get(\"refresh_token\")) {",
									"            pm.environment.set(\"refresh_token\", jsonData.refresh_token);",
									"        }",
									"        if (usedRefreshToken === pm.environment.get(\"refresh_token_admin\")) {",
									"            pm.environment.set(\"refresh_token_admin\", jsonData.refresh_token);",
									"        }",
									"    }",
									"    ",
									"    // Decodificar JWT para obtener información de expiración",
									"    var tokenParts = jsonData.access_token.split('.');",
									"    if (tokenParts.length === 3) {",
									"        var payload = JSON.parse(atob(tokenParts[1]));",
									"        var expiresAt = new Date(payload.exp * 1000);",
									"        var expiresIn = jsonData.expires_in || 'N/A';",
									"        console.log('Token refrescado exitosamente');",
									"        console.log('Nuevo token expira en: ' + expiresIn + ' segundos');",
									"        console.log('Nuevo token expira a las: ' + expiresAt.toLocaleString());",
									"    }",
									"}",
									"",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has access_token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('access_token');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "client_id",
									"value": "spring-auth-service",
									"type": "text"
								},
								{
									"key": "client_secret",
									"value": "{{client_secret}}",
									"type": "text"
								},
								{
									"key": "refresh_token",
									"value": "{{refresh_token}}",
									"type": "text",
									"description": "Usa refresh_token o refresh_token_admin según corresponda"
								},
								{
									"key": "grant_type",
									"value": "refresh_token",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{keycloak_url}}/realms/master/protocol/openid-connect/token",
							"host": [
								"{{keycloak_url}}"
							],
							"path": [
								"realms",
								"master",
								"protocol",
								"openid-connect",
								"token"
							]
						},
						"description": "Renueva el access_token usando el refresh_token. Útil cuando el access_token expira (después de 1 hora). No necesitas volver a ingresar usuario/contraseña."
					},
					"response": []
				}
			],
			"description": "Endpoints para obtener tokens JWT desde Keycloak"
