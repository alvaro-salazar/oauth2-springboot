				{
					"name": "Obtener Token - testuser",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"access_token\", jsonData.access_token);",
									"    pm.environment.set(\"token_type\", jsonData.token_type);",
									"    ",
									"    // Guardar refresh_token si está disponible",
									"    if (jsonData.refresh_token) {",
									"        pm.environment.set(\"refresh_token\", jsonData.refresh_token);",
									"        console.log('Refresh token guardado');",
									"    }",
									"    ",
									"    // Decodificar JWT para obtener información de expiración",
									"    var tokenParts = jsonData.access_token.split('.');",
									"    if (tokenParts.length === 3) {",
									"        var payload = JSON.parse(atob(tokenParts[1]));",
									"        var expiresAt = new Date(payload.exp * 1000);",
									"        var expiresIn = jsonData.expires_in || 'N/A';",
									"        console.log('Token guardado exitosamente');",
									"        console.log('Token expira en: ' + expiresIn + ' segundos');",
									"        console.log('Token expira a las: ' + expiresAt.toLocaleString());",
									"        pm.environment.set(\"token_expires_at\", expiresAt.toISOString());",
									"    } else {",
									"        console.log('Token guardado exitosamente');",
									"    }",
									"}",
									"",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has access_token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('access_token');",
									"});",
									"",
									"pm.test(\"Token expires_in is present\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('expires_in');",
									"    console.log('Token válido por: ' + jsonData.expires_in + ' segundos');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
