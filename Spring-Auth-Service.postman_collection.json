									"key": "client_secret",
									"value": "{{client_secret}}",
									"type": "text",
									"description": "Obtener el secret desde Keycloak: Clients > spring-auth-service > Credentials"
								},
								{
									"key": "username",
									"value": "testuser",
									"type": "text"
								},
								{
									"key": "password",
									"value": "test123",
									"type": "text"
								},
								{
									"key": "grant_type",
									"value": "password",
